@model VetShop.Models.Brand.BrandDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-4">
    <h1 class="text-center">Brand Details</h1>

    <div class="card shadow-lg mt-4">
        <div class="row g-0">
            <div class="col-md-4 text-center">
                <img src="@Model.ImageUrl" class="img-fluid rounded-start p-3" style="max-height: 250px;" alt="@Model.BrandName logo" />
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h2 class="card-title">@Model.BrandName</h2>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4 text-center">
        <a asp-controller="Brand" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary me-2">Edit Brand</a>
        <a asp-action="All" asp-controller="Brand" class="btn btn-secondary">Back to All</a>
    </div>
</div>

